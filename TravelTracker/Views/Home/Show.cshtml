@model Destination

@{
    ViewBag.Title = "Home Page";
}

<div class="text-center">
    <div class="row ">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6 mr-auto ml-auto">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">@Model.Address</div>
                    <!--
                        TODO: make this into a function to limit code duplication
                        If ImageFile is a url stop, otherwise  append
                        ~/images/destinations/ to the front of ImageFile
                    -->
                    @if (Model.ImageFile.StartsWith("https://"))
                    {
                        <img class="card-img-top" src="@Model.ImageFile" />
                    }
                    else
                    {
                        <img class="card-img-top" src="~/images/destinations/@Model.ImageFile" alt="Image file: @Model.ImageFile" />
                    }
                    @if (Model.Visited)
                    {
                        <div class="card-text">Status: Visited</div>
                        <br />
                    }
                    else
                    {
                        <div class="card-text">Status: Planning to go</div>
                        <br />
                    }
                    <p class="card-text">@Model.Details</p>
                    <a class="btn btn-warning float-left fixed-width-md" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <form class="float-right" method="post" asp-action="Delete" asp-route-id="@Model.Id">
                        <button class="btn btn-danger fixed-width-md">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>